<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="@dimen/sizeback"
        android:layout_height="@dimen/sizeback"
        android:src="@drawable/ic_close_black_24dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/marginback"
        android:layout_marginStart="@dimen/marginback" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/top_and_bottom"
        android:layout_marginBottom="@dimen/top_and_bottom"
        android:layout_marginStart="@dimen/start_and_end"
        android:layout_marginEnd="@dimen/start_and_end"/>

</RelativeLayout>